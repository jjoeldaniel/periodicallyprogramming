---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import BlogHeader from "../../components/BlogHeader.astro";

export async function getStaticPaths() {
    const posts = await getCollection("blog");
    return posts.map((entry) => ({
        params: { slug: entry.slug },
        props: { entry },
    }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
const slug = "/blog/" + entry.slug;
---

<Layout title={entry.data.title}>
    <main class="rounded-md bg-[#282c37] border-transparent ml-2">
        <BlogHeader slug={slug} title={entry.data.title} />

        <div class="p-4">
            <div
                class="prose prose-p:text-white prose-headings:text-white prose-a:text-[#8c8dff]"
            >
                <Content />
            </div>
        </div>
    </main>
</Layout>
