---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import joelpic from "../images//joel.png";
const NAME_SHORT = "Joel";
const NAME = "Joel Daniel Rico";
---

<Layout title="Home" currentPage="Home">
    <section id="hero" class="text-center py-12 md:py-20">
        <div class="max-w-3xl mx-auto">
            <div class="mb-8">
                <Image
                    class="w-32 h-32 md:w-40 md:h-40 rounded-full mx-auto object-cover border-4 border-cyan-500 shadow-lg"
                    src={joelpic}
                    alt=`${NAME} - Avatar`
                />
            </div>

            <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold mb-4">
                Hi, I'm <span class="text-cyan-400">{NAME_SHORT}</span>
            </h1>

            <p class="text-xl sm:text-2xl text-slate-300 mb-6">
                A Passionate Software Engineer Crafting Digital Experiences.
            </p>

            <div
                class="text-md sm:text-lg text-slate-400 leading-relaxed max-w-2xl mx-auto space-y-4"
            >
                <p>
                    Welcome to my personal corner of the web! Feel free to
                    explore my work and learn more about my journey.
                </p>
            </div>

            <div class="mt-10">
                <a
                    href="/contact/"
                    class="ml-4 border border-cyan-500 text-cyan-400 hover:bg-cyan-500 hover:text-slate-900 font-semibold py-3 px-8 rounded-lg shadow-md transition-colors duration-300 text-lg"
                >
                    Get in Touch
                </a>
            </div>
        </div>
    </section>
</Layout>
