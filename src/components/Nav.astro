---
const currentPath = Astro.url.pathname;
---

<link
    rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,500,0,200"
/>

<nav>
    <!-- Mobile view -->
    <div class="md:hidden flex place-content-evenly flex-row">
        <a href="/blog/" class="flex">
            <span class="material-symbols-outlined pr-2"> rss_feed</span>
            <span class="hidden md:block font-bold"> Blog</span>
        </a>
        <a href="/"><img src="/favicon.svg" class="pr-2" width="35" /></a>
        <a href="/projects" class="flex">
            <span class="material-symbols-outlined pr-2"> star</span>
            <span class="hidden md:block font-bold"> Projects</span>
        </a>
    </div>

    <div class="hidden md:block">
        <h1 class="text-xl font-semibold pb-3 border-b-2 border-[#282c37]">
            <a class="flex" href="/"
                ><img src="/favicon.svg" height="30" width="30" /> Periodially Programming</a
            >
        </h1>
    </div>

    <!-- Desktop view -->
    <div class="hidden md:block">
        <ul class="space-y-6 md:space-y-4 pl-0 md:pl-2 p-2">
            <li class="pt-4 items-center">
                {
                    currentPath === "/" ? (
                        <a href="/" class="flex text-[#8c8dff]">
                            <span class="material-symbols-outlined pr-2">
                                {" "}
                                home
                            </span>
                            <span class="hidden md:block font-bold"> Home</span>
                        </a>
                    ) : (
                        <a href="/" class="flex">
                            <span class="material-symbols-outlined pr-2">
                                {" "}
                                home
                            </span>
                            <span class="hidden md:block font-bold"> Home</span>
                        </a>
                    )
                }
            </li>
            <li class="items-center">
                {
                    currentPath.includes("blog") ? (
                        <a href="/blog/" class="flex text-[#8c8dff]">
                            <span class="material-symbols-outlined pr-2">
                                {" "}
                                rss_feed
                            </span>
                            <span class="hidden md:block font-bold"> Blog</span>
                        </a>
                    ) : (
                        <a href="/blog/" class="flex">
                            <span class="material-symbols-outlined pr-2">
                                {" "}
                                rss_feed
                            </span>
                            <span class="hidden md:block font-bold"> Blog</span>
                        </a>
                    )
                }
            </li>
            <li class="items-center">
                {
                    currentPath.includes("projects") ? (
                        <a href="/projects" class="flex text-[#8c8dff]">
                            <span class="material-symbols-outlined pr-2">
                                {" "}
                                star
                            </span>
                            <span class="hidden md:block font-bold">
                                {" "}
                                Projects
                            </span>
                        </a>
                    ) : (
                        <a href="/projects" class="flex">
                            <span class="material-symbols-outlined pr-2">
                                {" "}
                                star
                            </span>
                            <span class="hidden md:block font-bold">
                                {" "}
                                Projects
                            </span>
                        </a>
                    )
                }
            </li>
        </ul>
    </div>
</nav>
